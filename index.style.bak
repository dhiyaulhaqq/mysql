<?php

// Include debugging tool
require('debugging.php');

// Include database
require('config/db.php');

// Create Query
$query = 'SELECT * FROM posts';

// Get Result
$result = mysqli_query($conn, $query);

// Fetch Data
$posts = mysqli_fetch_all($result, MYSQLI_ASSOC);

// Free Result
mysqli_free_result($result);

// Close Connection
mysqli_close($conn);

?>

